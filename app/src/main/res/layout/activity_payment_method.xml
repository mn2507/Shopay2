<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentMethod"
    android:background="@color/black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/empty_yellow_box"
        android:padding="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Credit Cards"
            android:fontFamily="@font/sfprodisplaybold"
            android:textColor="@color/black"
            android:textSize="35dp"
            android:textStyle="bold"


            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We keep your financial details more secure."
            android:fontFamily="@font/sfprodisplaymedium"
            android:textColor="@color/grey"
            />


        <ImageView
            android:id="@+id/btnaddpayment"
            android:layout_width="72dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:onClick="addFunc"
            android:src="@drawable/ic_add"


            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


        </ScrollView>



    </LinearLayout>

    <TextView
        android:layout_width="390dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Saved card"
        android:fontFamily="@font/sfprodisplaybold"
        android:textColor="@color/grey2"

        android:layout_marginTop="25dp"
        android:textSize="16dp"
        />

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="390dp"
        android:layout_height="220dp"
        android:background="@drawable/edit_text_border"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/card_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/ic_credit_card"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-95dp"
            android:text="\u25CF\u25CF\u25CF\u25CF \u25CF\u25CF\u25CF\u25CF \u25CF\u25CF\u25CF\u25CF"
            android:textColor="@color/grey2"
            android:layout_marginTop="110dp"
            android:textSize="12dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".  .  .  ."
            android:id="@+id/last4"
            android:textSize="18dp"
            android:layout_marginTop="111dp"
            android:layout_marginStart="7dp"
            android:textColor="@color/grey2"
            android:fontFamily="@font/sfprodisplaymedium">

        </TextView>

        <!--<TextView
            android:id="@+id/expiry_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-200dp"
            android:text="Expiry Date"
            android:textColor="@color/grey2"
            android:layout_marginTop="150dp"
            android:textSize="14dp"
            />-->


        <!--<ImageView
            android:id="@+id/card_radiobutton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/uncheck_yellow_icon"
            android:layout_marginStart="219dp"
            android:layout_marginTop="20dp"
            />-->
        <!--<TextView
            android:id="@+id/card_expiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="10/21"
            android:textColor="@color/grey2"
            android:layout_marginTop="150dp"
            android:textSize="14dp"
            />-->

    </LinearLayout>



<Button
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:text="remove card"
    android:onClick="removecard"
    android:background="@drawable/edit_full_border"
    android:fontFamily="@font/sfprodisplaybold"
    android:layout_marginTop="20dp"
    android:padding="10dp"
    android:layout_gravity="center"
    android:textSize="18dp"
    android:textColor="@color/black"
    >


</Button>


</LinearLayout>